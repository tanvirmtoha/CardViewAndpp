<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="12"
    tools:context=".CardEighth">



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="vertical"
       android:layout_weight="11">
       <LinearLayout
           android:orientation="horizontal"
           android:weightSum="2"
           android:gravity="center"
           android:layout_weight="3"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <ImageView
               android:id="@+id/duetId"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:src="@drawable/duet"
               android:padding="50dp"
               />
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="#ddd"/>
           <ImageView
               android:id="@+id/sustId"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:src="@drawable/sust"
               android:padding="50dp"
               />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#ddd"/>
       <LinearLayout
           android:orientation="horizontal"
           android:weightSum="2"
           android:gravity="center"
           android:layout_weight="3"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <ImageView
               android:id="@+id/justId"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:src="@drawable/justlogo"
               android:padding="50dp"
               />
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="#ddd"/>
           <ImageView
               android:id="@+id/ruId"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:src="@drawable/runi"
               android:padding="50dp"
               />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#ddd"/>
       <LinearLayout
           android:orientation="horizontal"
           android:weightSum="2"
           android:gravity="center"
           android:layout_weight="3"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <ImageView
               android:id="@+id/amieId"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:src="@drawable/amie"
               android:padding="50dp"
               />
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="#ddd"/>
           <ImageView
               android:id="@+id/kuId"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:padding="50dp"
               android:src="@drawable/ku" />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#ddd"/>
   </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        />
</LinearLayout>